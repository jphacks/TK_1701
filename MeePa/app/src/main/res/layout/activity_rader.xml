    <!--重ねるViewを、下のもの（カメラ）から順に記述-->

    <!--カメラプレビュー-->

    <TextureView
        android:id="@+id/texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--位置情報のメッセージ-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        >
        <jp.enpitsu.meepa.Global.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:text="AR"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            />
        <Switch
            android:id="@+id/switch_AR"
            style="@style/raderSwitch"
            android:layout_width="match_parent"
            android:text=""
            android:checked="false"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:id="@+id/linearLayout_raderMessages">

        <jp.enpitsu.meepa.Global.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="measuring"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fontSize_Large"
            android:textStyle="bold"
            meepa:font="Bauhaus-93_6274.ttf"
            android:id="@+id/textView_DistanceMessage"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            />
        <jp.enpitsu.meepa.Global.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fontSize_Regular"
            android:id="@+id/textView_oppName"
            android:layout_gravity="center_horizontal"
            meepa:font="KozGoPr6N-Medium.otf"
            />

    </LinearLayout>


    <!--下側のボタン群+wifiDirectのメッセージ表示テキスト -->
