<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="25dp"

        android:focusable="true"
        android:focusableInTouchMode="true"
        >


        <jp.enpitsu.meepa.Global.CustomTextView
            android:id="@+id/textView_complain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="User Name"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/fontSize_Regular"
            />

        <jp.enpitsu.meepa.Global.CustomEditText
            android:id="@+id/editText_userInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:hint=""
            android:textColor="@color/colorGray"
            android:textSize="@dimen/fontSize_Regular"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="right"
            >

            <jp.enpitsu.meepa.Global.CustomButton
                android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:text="Cancel"
                android:textSize="@dimen/fontSize_Regular"
                android:textColor="@color/colorGray"
                />

            <jp.enpitsu.meepa.Global.CustomButton
                android:id="@+id/button_create"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorGray"
                android:text="Create"
                android:textSize="@dimen/fontSize_Regular"
                android:textColor="@color/colorWhite"
                />

            <jp.enpitsu.meepa.Global.CustomButton
                android:id="@+id/button_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorGray"
                android:text="Share"
                android:textSize="@dimen/fontSize_Regular"
                android:textColor="@color/colorWhite"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>