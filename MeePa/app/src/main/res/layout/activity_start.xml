<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fontsample="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:paddingBottom="25dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="16dp">


        <jp.enpitsu.meepa.Global.CustomTextView
            android:id="@+id/textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="MeePa"
            android:textColor="@color/colorWhite"
            android:textSize="50dp"
            fontsample:font="Bauhaus-93_6274.ttf"
            />

        <jp.enpitsu.meepa.Global.CustomEditText
            android:id="@+id/editText_oppId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:gravity="center"
            android:hint="PIN"
            android:singleLine="true"
            />

        <jp.enpitsu.meepa.Global.CustomButton
            android:id="@+id/button_meetUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meep Up"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGray"
            />

    </LinearLayout>

    <jp.enpitsu.meepa.Global.CustomButton
        android:id="@+id/button_createNewPIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorOrange"
        android:gravity="center"
        android:text="Create New PIN"
        android:textColor="@color/colorWhite" />

</RelativeLayout>

